<div class="mx-auto mt-64">
  <%= image_tag "logo.png", width: "180"%>
  <%= form_with url: login_path, method: :post, class: "flex flex-col text-lg font-semibold text-blue"  do |f| %>
    <% if flash.now[:alert] %>
      <span class="text-red">
        <%= flash.now[:alert] %>
      </span>
    <% end %>
    <%= f.label :username, "Username", class: "mt-4 text-xl" %>
    <%= f.text_field :username, placeholder: "Username", autofocus:true , class: "text-black rounded-md border-2 border-gray focus:ring-0 focus:border-blue focus:border-[3px]" %>
    <%= f.label :password, "Password", class: "mt-4 text-xl" %>
    <%= f.password_field :password, placeholder: "Password", class: "text-black rounded-md border-2 border-gray focus:ring-0 focus:border-blue focus:border-[3px]" %>
    <%= f.submit "Login", class: "bg-blue text-white mt-4 px-2 py-1 rounded-md cursor-pointer hover:bg-darkblue duration-200" %>
  <% end %>
</div>
