<% provide(:title, "Categories") %>
<div class="px-8 flex flex-col h-full">
  <div class="flex items-center mb-8 relative z-10">
    <h1 class="font-semibold text-4xl text-blue">Edit category <%= @category.id %></h1>
  </div>
  <% if flash[:alert] %>
    <% flash[:alert].each do |message| %>
      <p class="font-semibold text-md px-4 py-2 w-fit rounded-md mb-4 bg-lightred text-red"><%= message %></p>
    <% end %>
  <% end %>
  <%= form_with model: @category, class: "flex flex-col gap-2 w-fit" do |f| %>
    <%= f.label :name, "Name", class: "font-semibold text-2xl" %>
    <%= f.text_field :name, placeholder: "Category's name", class: "text-black rounded-md border-2 border-gray focus:ring-0 focus:border-blue focus:border-[3px]" %>
    <div class="flex gap-2 mt-4 items-stretch">
      <%= f.submit "Delete",  data: { confirm: "Are you sure you want to delete this category?" }, class: "bg-red text-white font-semibold px-4 py-2 rounded-md cursor-pointer flex-1 hover:bg-darkred" %>
      <%= f.submit "Update", class: "bg-blue hover:bg-darkblue text-white rounded-md cursor-pointer px-4 py-2 w-full font-semibold flex-1" %>
    </div>
  <% end %>
</div>
